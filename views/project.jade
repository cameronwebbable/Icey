              li
                a(href="/context/#{context}/project/#{item.name}/")= item.name
        li.divider-vertical
      ul.nav.pull-right
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            span Logged in as <strong>#{user.github.name}</strong>
