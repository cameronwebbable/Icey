.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      a.brand= context
      ul.nav
        li.divider-vertical
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | Switch projects
            b.caret
          ul.dropdown-menu
            li.nav-header Repos
